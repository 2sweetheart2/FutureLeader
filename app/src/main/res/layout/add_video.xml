<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_video_name"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="название видео..."
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_video_name"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/add_video_file_name"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_video_file_name"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="выбрать видео"
        android:id="@+id/add_video_btn"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>