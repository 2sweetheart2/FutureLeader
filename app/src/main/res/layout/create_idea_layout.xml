<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_idea_layout"
        >

        <EditText
            android:id="@+id/create_idea_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="заголовок (45 симв.)"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <TextView
            android:id="@+id/create_idea_fuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_idea_label"
            android:layout_margin="15dp"
            android:text="Если вы хотите оставить идеи для модернизации приложения, то заголовок должен быть #app"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/create_idea_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_idea_fuck"
            android:layout_margin="15dp"
            android:hint="тескст вашей идеи (не огр. кол-во)"
            tools:ignore="Autofill,HardcodedText,TextFields" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>