<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/do_survey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/do_survey_label"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/do_survey_label"
            android:id="@+id/do_survey_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <Button
            android:id="@+id/do_survey_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/do_survey_list"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="25dp"
            android:text="дальше"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>