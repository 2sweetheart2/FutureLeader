<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:0.5"
        android:background="@drawable/gray_gradient_with_corners"
        android:id="@+id/obj_video_view"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/obj_video_view"
        app:layout_constraintBottom_toBottomOf="@id/obj_video_view"
        app:layout_constraintRight_toRightOf="@id/obj_video_view"
        app:layout_constraintLeft_toLeftOf="@id/obj_video_view"
        android:src="@drawable/play"
        android:background="@drawable/gray_gradient_with_corners_more_black"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/obj_video_view"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/obj_video_view"
        app:layout_constraintRight_toRightOf="@id/obj_video_view"
        android:id="@+id/obj_video_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>