<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/pop_music"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/pop_music_search"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Поиск по имени..."
            android:elevation="10dp"
            android:padding="10dp"
            android:background="@drawable/gray_gradient_with_corners"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:id="@+id/pop_music_your_music"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/pop_music_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваши треки:"
            android:textColor="@color/black"

            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/pop_music_your_music_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_gradient_with_corners"
            app:layout_constraintTop_toBottomOf="@id/pop_music_your_music"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/pop_music_pop_text"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/pop_music_your_music_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Популярные треки:"
            android:textColor="@color/black"

            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/pop_music_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_gradient_with_corners"
            app:layout_constraintTop_toBottomOf="@id/pop_music_pop_text"
            android:layout_margin="10dp"
/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>