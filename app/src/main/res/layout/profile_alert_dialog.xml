<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/profile_alert_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_news_paper"
        />
    <TextView
        android:id="@+id/profile_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_alert_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_alert_image"
        app:layout_constraintLeft_toRightOf="@id/profile_alert_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        style="@style/first_column"
        android:text=""
        />
    <TextView
        android:id="@+id/profile_alert_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_alert_title"
        app:layout_constraintLeft_toLeftOf="@id/profile_alert_image"
        android:layout_marginTop="25dp"
        style="@style/first_column"
        android:text="coins: "
        />
    <TextView
        android:id="@+id/profile_alert_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_alert_cost"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        style="@style/first_column"
        android:text=""
        />
</androidx.constraintlayout.widget.ConstraintLayout>