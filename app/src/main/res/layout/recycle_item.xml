<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/achivement_list_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

         />
    <TextView
        android:id="@+id/achivement_list_name"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/achivement_list_image"
        app:layout_constraintRight_toRightOf="@id/achivement_list_image"
        app:layout_constraintLeft_toLeftOf="@id/achivement_list_image"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        />





</androidx.constraintlayout.widget.ConstraintLayout>